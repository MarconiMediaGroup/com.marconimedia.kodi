<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.pyxbmct.demo"
   name="PyXBMCt Demo"
   version="1.0.0"
   provider-name="Roman_V_M">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.pyxbmct" version="1.1.4" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">PyXBMCt Demo Addon</summary>
    <description lang="en">Addon for demonstrating the capabilities and usage of PyXBMCt framework.</description>
  </extension>
</addon>

<addon id="plugin.video.turkishtv" name="Turkish TV" version="0.1.14122215a" provider-name="andrewmarconi">
  <requires>
    <import addon="xbmc.python" version="2.6.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Watch live Turkish television.</summary>
	<summary lang="tr">Canlı Türk televizyon izle.</summary>
	<summary lang="de">Sehen Sie Live-türkischen Fernsehen</summary>

    <description lang="en">Because streams tend to move to new locations, don't be surprised if some channels stop working at some point. We'll do our best to keep these up to date.</description>
    <disclaimer lang="en"></disclaimer>
    <language></language>
    <platform>all</platform>
    <license></license>
    <forum></forum>
    <website></website>
    <email></email>
    <source></source>
  </extension>
</addon>

