	<extension point="xbmc.addon.repository" name="MMG Kodi Repository">
		<info compressed="false">https://raw.githubusercontent.com/andrewmarconi/mmg-kodi/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/andrewmarconi/mmg-kodi/master/addons.xml.md5</checksum>
